{
  "name": "rich-to-pptx",
  "version": "1.0.0",
  "description": "Convert rich text to PptxGenJS format",
  "type": "module",
  "main": "dist/app.js",
  "scripts": {
    "dev": "bun run build:watch & bun run dev-server",
    "build": "bun build src/app.ts --outdir dist --target browser",
    "build:watch": "bun build src/app.ts --outdir dist --target browser --watch",
    "serve": "bun run dev-server",
    "start": "bun run dev-server"
  },
  "devDependencies": {
    "bun-types": "latest",
    "@types/bun": "latest"
  },
  "dependencies": {
    "pptxgenjs": "^4.0.1",
    "quill": "^2.0.3"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "private": true,
  "peerDependencies": {
    "typescript": "^5"
  }
}
